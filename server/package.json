{
  "name": "aspiritywebtemplate-server",
  "version": "0.1.0",
  "description": "Aspirity Web Template Server",
  "license": "ISC",
  "author": "Aspirity LTD",
  "scripts": {
    "server": "nodemon --exec ts-node --project ./src/tsconfig.json ./src/server.ts",
    "dependencies": "nodemon --config nodemon-dependencies.json --exec yarn install",
    "start": "concurrently 'yarn run server' 'yarn run dependencies'"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "convict": "^4.2.0",
    "express": "^4.16.3",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.11.1",
    "@types/node": "^10.0.6",
    "concurrently": "^3.5.1",
    "nodemon": "^1.17.4",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
